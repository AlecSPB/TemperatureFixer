<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lt.ulop.temperaturefixer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="lt.ulop.temperaturefixer.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lt.ulop.temperaturefixer.AddEvent"
            android:label="@string/title_activity_add_event"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="lt.ulop.temperaturefixer.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="lt.ulop.temperaturefixer.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lt.ulop.temperaturefixer.MainActivity" />
        </activity>
        <activity
            android:name="lt.ulop.temperaturefixer.content_settings_Activity"
            android:label="@string/title_activity_content_settings_"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="lt.ulop.temperaturefixer.IllnesHistoryes"
            android:label="@string/title_activity_illnes_historyes"
            android:parentActivityName="lt.ulop.temperaturefixer.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lt.ulop.temperaturefixer.MainActivity" />
        </activity>

        <meta-data
            android:name="AA_DB_NAME"
            android:value="temperature.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />
    </application>

</manifest>